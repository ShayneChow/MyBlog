<div class="head-margin"></div>
<div class="container">
  <div class="row">
    <article>
      <header>
        <h1 class="title"><%= @post.title %></h1>
        <div class="article-info">
          <ul>
             <!-- tags -->
             <li><span class="glyphicon glyphicon-time"></span><%= @post.created_at.strftime('%Y-%m-%d') %></li>
          </ul>
        </div>
      </header>
      <div class="article-content">
        <%= raw @post.content %>
      </div>
        <%= render 'layouts/disqus' %>
    </article>
  </div>
</div>
