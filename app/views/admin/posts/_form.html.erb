<div class="col-md-12">
  <%= form_for [:admin, @post], html: {class: 'form-horizontal'} do |f| %>
      <div class="row">
        <div class="body">
          <div class="form-group">
            <%= f.label :title, '标题:', class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :title, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :desc, '描述:', class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_area :desc, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :content, '内容:', class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_area :content, class: 'form-control' %>
            </div>
          </div>
          <div class="clearfix">
            <%= f.submit '提交', class: 'btn btn-primary pull-right' %>
          </div>
        </div>
      </div>
  <% end %>
</div>