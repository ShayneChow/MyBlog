<%= link_to '创建新文章', new_admin_post_path %>
<table class="table table-hover">
  <thead>
  <tr>
    <td>序列</td>
    <td>标题</td>
    <td>ID</td>
    <td>描述</td>
    <td>内容</td>
    <td>操作</td>
  </tr>
  </thead>
  <tbody>
  <% @posts.each_with_index do |post, i| %>
      <tr>
        <td><%= i+1  %></td>
        <td><%= post.title %></td>
        <td><%= post.id %></td>
        <td><%= post.desc %></td>
        <td><%= raw markdown(post.content) %></td>
        <td><%= link_to '更新', edit_admin_post_path(post) %> <%= link_to '删除', admin_post_path(post), method: :delete, confirm: '是否一定要删除该页面？' %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @posts %>
