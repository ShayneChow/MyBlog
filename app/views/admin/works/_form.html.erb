<div class="col-md-12">
  <%= form_for [:admin, @work], html: {class: 'form-horizontal'} do |f| %>
      <div class="row">
        <div class="body">
          <div class="form-group">
            <%= f.label :title, '标题:', class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :title, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :fromdate, '时间:', class: 'col-sm-2 control-label' %>
            <div class="col-sm-4">
              <%= f.text_field :fromdate, class: ' form-control' %>
            </div>
            <%= f.label :todate, '到:', class: 'col-sm-1 control-label' %>
            <div class="col-sm-4">
              <%= f.text_field :todate, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :desc, '描述:', class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_area :desc, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :content, '内容:', class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_area :content, class: 'form-control',  id:'editor' %>
            </div>
          </div>
          <div class="clearfix">
            <%= f.submit '提交', class: 'btn btn-primary pull-right' %>
          </div>
        </div>
      </div>
  <% end %>
</div>

<script type="text/javascript" charset="utf-8">
    var editor = new Simditor({
        textarea: $('#editor'),
        defaultImage: '/images/image.png',
        placeholder: 'hello world!',
        upload: {
            url: '/images/tmp',
            params: null,
            fileKey: '',
            connectionCount: 3 ,
            leaveConfirm: '正在上传文件，如果离开上传会自动取消'
        }
    });
</script>