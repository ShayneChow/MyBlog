<div class="head-margin"></div>
<%= link_to '创建新work', new_admin_work_path, class: 'btn btn-primary pull-right' %>
<table class="table table-hover">
  <thead>
  <tr>
    <td>编号</td>
    <td>标题</td>
    <td>描述</td>
    <td>操作</td>
  </tr>
  </thead>
  <tbody>
  <% @works.each_with_index do |work, i| %>
      <tr>
        <td><%= i+1  %></td>
        <td><%= work.title %></td>
        <td><%= work.desc %></td>
        <td><%= link_to '更新', edit_admin_work_path(work), class: 'btn-sm btn-info' %> <%= link_to '删除', admin_work_path(work), method: :delete, confirm: '是否一定要删除该页面？', class: 'btn-sm btn-danger' %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @works %>
